{% extends "layout.njk" %}

{% block head %}
    <title>Recipes - Foodfy</title>
{% endblock %}

{% block header %}
    <a href="/about">Sobre</a>
    <a href="/recipes"><strong>Receitas</strong></a>
{% endblock %}

{% block content %}

<section class="cards">

    {% for recipe in recipes %}
        <div class="card" id="{{recipe.title}}" itemid="1">
            <div class="card__image-container">
                <img src="{{recipe.image}}" alt="Image {{recipe.title}}">
            </div>
            
            <div class="plate-name">
                <h5 id="plate1">{{recipe.title}}</h5>
            </div>
            <div class="cooker-name">
                <p id="cooker1">{{recipe.author}}</p>
            </div> 
        </div>
    {% endfor %}

</section>

{% endblock %}